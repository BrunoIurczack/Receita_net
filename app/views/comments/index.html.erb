<div class="container">
    <% if @recipe.comments.size > 0 %>
    <div class="jumbotron">
        <ul>
            <% @comments.each do |comment| %>
            <li>
                <p>
                    <%= comment.name %> <small class="small_font_rating"> <%= pluralize(comment.rating, 'estrelas', 'estrelas')%>
                    </small><small class="small_font"> - <%= time_ago_in_words(comment.created_at)%> atras </small>
                </p>
                <p>
                    <%= comment.comment %>
                </p>
            </li>
            <% end %>
        </ul>
    </div>
    <% else %>
        <div class="jumbotron">
            <h3>No exit comments!! </h3>
        </div>
    <% end %>
     <%= link_to recipes_path, class: 'btn btn-link' do %>
        <i class="glyphicon glyphicon-home">Receitas</i>
    <% end %>
</div>
    