<%= form_for(@recipe) do |f| %>
<%= render 'layouts/errors' %>

<p class="form-group"> 
    <%= f.label :Nome %><br>
    <%= f.text_field :name, class: 'form-control'%>
</p>

<p class="form-group"> 
    <%= f.label :Ingredientes %><br>
    <%= f.text_area :stuff, cols: 20, rows: 5, class: 'form-control'%>
</p>

<p class="form-group"> 
    <%= f.label :Tipo %><br>
    <%= f.select :kind, Recipe::KIND ,prompt: "Escolha sua opcao", class: 'form-control'%>
</p>

<p class="form-group"> 
    <%= f.label :Calorias %><br>
    <%= f.number_field :calories, class: 'form-control' %>
</p>

<p class="form-group"> 
    <%= f.label :Modo_de_preparo %><br>
    <%= f.text_area  :prepare_mode, cols: 20, rows: 5, class: 'form-control'%>
</p>

<p class="form-group"> 
    <%= f.label :Tempo_de_preparo %><br>
    <%= f.time_select :duration, class: 'form-control' %>
</p>

<p class="form-group"> 
    <%= f.label :Porcoes %><br>
    <%= f.text_field :portion, class: 'form-control' %>
</p>

<p class="form-group"> 
    <%= f.label :Custo %><br>
    <%= f.number_field :cost, class: 'form-control'%>
</p> 

<p class="form-group"> 
    <%= f.label :Poster %><br>
    <%= f.text_field :poster, placeholder: ".GIF, .JPEG ou PNG", class: 'form-control'%>
</p>

<p class="form-group">
    <%= f.submit class:"btn btn-primary" %>
    <%= link_to 'cancelar', root_path, class:"btn btn-danger" %>
</p>

<% end %>